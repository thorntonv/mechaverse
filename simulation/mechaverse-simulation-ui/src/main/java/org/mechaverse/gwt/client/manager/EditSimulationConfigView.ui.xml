<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

  <ui:style>
  .rootPanel {
    position: relative;
    background-color: #FEFEFE;
	}
  .label {
    padding-right: 20px;
    line-height: 25px;
    vertical-align: middle;
    width: 12em;
  }
  .textBox {
	  clear: right;
    width: 5em;
  }
  </ui:style>

  <g:Grid addStyleNames="{style.rootPanel}">
    <g:row>
      <g:customCell><g:Label addStyleNames="{style.label}">Min. instance count</g:Label></g:customCell>
      <g:customCell><g:TextBox ui:field="minInstanceCount" addStyleNames="{style.textBox}" /></g:customCell>
    </g:row>
    
    <g:row>
      <g:customCell><g:Label addStyleNames="{style.label}">Max. instance count</g:Label></g:customCell>
      <g:customCell><g:TextBox ui:field="maxInstanceCount" addStyleNames="{style.textBox}" /></g:customCell>
    </g:row>

    <g:row>
      <g:customCell><g:Label addStyleNames="{style.label}">Iterations per task</g:Label></g:customCell>
      <g:customCell><g:TextBox ui:field="taskIterationCount" addStyleNames="{style.textBox}" /></g:customCell>
    </g:row>

    <g:row>
      <g:customCell><g:Label addStyleNames="{style.label}">Max task duration (sec.)</g:Label></g:customCell>
      <g:customCell><g:TextBox ui:field="taskMaxDurationSeconds" addStyleNames="{style.textBox}" /></g:customCell>
    </g:row>

    <g:row>
      <g:customCell><g:Label addStyleNames="{style.label}">Simulation Type</g:Label></g:customCell>
      <g:customCell><g:ListBox ui:field="simulationType" addStyleNames="{style.textBox}" /></g:customCell>
    </g:row>
  </g:Grid>
</ui:UiBinder>